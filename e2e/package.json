{
  "name": "client-timesheet-e2e",
  "version": "1.0.0",
  "description": "Playwright with Cucumber BDD automation framework for Client Timesheet App",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config cucumber.js",
    "test:headless": "HEADLESS=true cucumber-js --config cucumber.js",
    "test:headed": "HEADLESS=false cucumber-js --config cucumber.js",
    "report": "node src/support/report-generator.js",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "cucumber-html-reporter": "^7.1.1",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "playwright": "^1.40.1"
  }
}
