{
  "name": "client-timesheet-e2e-tests",
  "version": "1.0.0",
  "description": "Selenium BDD Cucumber E2E tests for Client Timesheet Application",
  "type": "module",
  "scripts": {
    "test": "npx wdio run ./wdio.conf.js",
    "test:chrome": "npx wdio run ./wdio.conf.js --capabilities.browserName=chrome",
    "test:firefox": "npx wdio run ./wdio.conf.js --capabilities.browserName=firefox",
    "test:edge": "npx wdio run ./wdio.conf.js --capabilities.browserName=MicrosoftEdge",
    "test:all-browsers": "npm run test:chrome && npm run test:firefox && npm run test:edge",
    "test:headless": "HEADLESS=true npx wdio run ./wdio.conf.js"
  },
  "dependencies": {
    "@wdio/cli": "^8.40.0",
    "@wdio/cucumber-framework": "^8.40.0",
    "@wdio/local-runner": "^8.40.0",
    "@wdio/spec-reporter": "^8.40.0",
    "chai": "^6.2.2",
    "chromedriver": "^131.0.0",
    "edgedriver": "^5.6.0",
    "geckodriver": "^4.5.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-edgedriver-service": "^3.0.0",
    "wdio-geckodriver-service": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "selenium",
    "cucumber",
    "bdd",
    "e2e",
    "testing"
  ],
  "author": "",
  "license": "MIT"
}
